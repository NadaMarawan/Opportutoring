<%= render "shared/navbar" %>

<div class="row">
  <div class="col-sm-1"></div>
  <div class="col-sm-8">

  <h3>New Matching</h3><br>

  <%= form_with model: @matching do |form| %>
    <div class="form-group">
      <%= form.label :student_id %>
      <%= form.collection_select :student_id, @students, :id, :name, class: "form-control" %><br><br>
    </div>

    <div class="form-group">
      <%= form.label :tutor_id %>
      <%= form.collection_select :tutor_id, @tutors, :id, :name, class: "form-control" %><br><br>
    </div>

    <div class="form-group">
      <%= form.submit "Confirm Matching" %>
    </div>
  <% end %>

  </div>
  <div class="col-sm-1"></div>
</div>