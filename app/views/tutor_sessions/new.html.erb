<%= render "shared/navbar" %>

<div class="row">
  <div class="col-sm-1"></div>
  <div class="col-sm-8">

  <p id=”alert”><%= alert %></p>
  <h3>Tutor login</h3><br>
  <%= form_tag tutor_sessions_path do |form| %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password_digest %>
    </div>
    <div class="form-group">
      <%= submit_tag "Login" %>
    </div>
  <% end %>

  </div>
  <div class="col-sm-1"></div>
</div>
